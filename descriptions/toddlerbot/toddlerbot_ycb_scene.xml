<mujoco model="toddlerbot_scene">
    <include file="toddlerbot.xml" />
    <statistic center="0 0 0.25" extent="0.6" />
    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global azimuth="160" elevation="-20" offwidth="1280" offheight="720" />
    </visual>
    <worldbody>
        <light pos="0 0 1.5" dir="0 0 -1" directional="true" />
        <camera name="perspective" pos="0.7 -0.7 0.7" xyaxes="1 1 0 -1 1 3" mode="trackcom" />
        <camera name="side" pos="0 -1 0.6" xyaxes="1 0 0 0 1 3" mode="trackcom" />
        <camera name="top" pos="0 0 1" xyaxes="0 1 0 -1 0 0" mode="trackcom" />
        <camera name="front" pos="1 0 0.6" xyaxes="0 1 0 -1 0 3" mode="trackcom" />
        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" condim="3" />
        <camera name="test_cam" pos="0 0 0.1" quat="0.7071 0 -0.7071 0"/>
        <body name="table" pos="0.7825 0 0.1625">
            <geom name="table_geom" type="box" size="0.1625 0.225 0.1625"/>

            <!-- All these objects are now relative to the table -->
            <body name="sugar_box" pos="-0.14 0.01 0.16">
                <geom type="mesh" mesh="sugar_mesh" material="sugar_mat"/>
            </body>

            <body name="pear" pos="-0.1 -0.19 0.16">
                <geom type="mesh" mesh="pear_mesh" material="pear_mat" mass="0.3"/>
            </body>

            <body name="tennis_ball" pos="-0.141 0.24 0.16">
                <geom type="mesh" mesh="tennis_mesh" material="tennis_mat" mass="0.3"/>
            </body>

            <body name="pitcher" pos="0.124 -0.205 0.16">
                <geom type="mesh" mesh="pitcher_mesh" material="pitcher_mat" mass="0.3"/>
            </body>
        </body>
    </worldbody>
    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.0" />

        <texture name="sugar_tex" type="2d" file="../../tests/ycb/004_sugar_box/texture_map.png"/>
        <material name="sugar_mat" texture="sugar_tex" specular="0.3" shininess="0.7"/>
        <mesh name="sugar_mesh" file="../../tests/ycb/004_sugar_box/textured.obj"/>
        <texture name="pear_tex" type="2d" file="../../tests/ycb/016_pear/texture_map.png"/>
        <material name="pear_mat" texture="pear_tex" specular="0.3" shininess="0.7"/>
        <mesh name="pear_mesh" file="../../tests/ycb/016_pear/textured.obj"/>
        <texture name="tennis_tex" type="2d" file="../../tests/ycb/056_tennis_ball/texture_map.png"/>
        <material name="tennis_mat" texture="tennis_tex" specular="0.3" shininess="0.7"/>
        <mesh name="tennis_mesh" file="../../tests/ycb/056_tennis_ball/textured.obj"/>
        <texture name="pitcher_tex" type="2d" file="../../tests/ycb/019_pitcher_base/texture_map.png"/>
        <material name="pitcher_mat" texture="pitcher_tex" specular="0.3" shininess="0.7"/>
        <mesh name="pitcher_mesh" file="../../tests/ycb/019_pitcher_base/textured.obj"/>
    </asset>
</mujoco>